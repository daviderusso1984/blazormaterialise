<h5>Scale</h5>
<BM_button Type_button="enum_button.Large" Onclick="oncl">Click</BM_button>
<BM_button Class="@text" Type_button="enum_button.Floating"><BM_icon Icon="add"></BM_icon></BM_button>

<p>Code</p>
<p>In</p>
<code>@("blazormaterialise.Styles.scale_in")</code>
<p>Out</p>
<code>@("blazormaterialise.Styles.scale_out")</code>

@code {

    private string text = blazormaterialise.Styles.scale_in;
    

    private void oncl()
    {
        if(text == blazormaterialise.Styles.scale_in)
        {
            Console.WriteLine("cc");
            text = blazormaterialise.Styles.scale_out;
            
            //StateHasChanged();
        }
        else
        {
            text = blazormaterialise.Styles.scale_in;
            //StateHasChanged();
        }
    }



}
