@page "/Grid"

<style>
    .box{
        width:100%;
        height:100px;
        border: 1px solid #eee;
        margin: 7px 0;
        text-align: center;
        line-height: 50px;
        font-size: 28px;
        background-color: tomato;
        color: white;
        padding: 0;
    
    }
     
