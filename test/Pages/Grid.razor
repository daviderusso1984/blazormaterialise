<p>Screen Sizes </p>

<BM_table Items="item">
    <TableHeader>
        <th></th>
        <th>Mobile Devices</th>
        <th>Tablet Devices</th>
        <th>Desktop Devices</th>
        <th>Large Desktop Devices</th>        
    </TableHeader>
    <RowTemplate>
        <td>@context.content</td>
    <td>@context.mobile</td>
    <td>@context.tablet</td>
    <td>@context.desktop</td>
    <td>@context.large_desktop</td>
    </RowTemplate>    
    
</BM_table>


@code{
