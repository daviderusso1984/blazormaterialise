@namespace blazormaterialise
@inject IJSRuntime JSRuntime;
@inherits css_base


@switch (Type_item)
{
    case enum_collection.Basic:
    <li class="collection-item @dim @Class" id="@Id" >@ChildContent</li>
    break;
    case enum_collection.Links:
    <a href="@Href" class="collection-item @valor @dim @Class" id="@Id" >@ChildContent</a>
    break;
    default:
    break;
}

@code{
    [Parameter]
    public RenderFragment ChildContent{get;set;}

    [Parameter]
    public enum_collection Type_item {get;set;} = enum_collection.Links;
    [Parameter]
    public string Href {get;set;} = "";
    [Parameter]
    public bool Active{get;set;} = false;

    private string valor = "";

    private string dim="";

    protected override void OnInitialized(){
        dim = "";
        dim += blazormaterialise.show.get_show(Visibility) + " ";
      dim += color.get_backcolor(color.get_color(Backcolor)) + " ";
        dim += color.get_Textcolor(color.get_color(Textcolor)) + " ";
        if(Active){
            valor += "active ";
        }
    }
}