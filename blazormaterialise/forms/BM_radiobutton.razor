@namespace blazormaterialise




    <label>
        @if(Checked){
            @if(Disabled){
                 <input name="group1" @onchange="Change" type="radio" checked disabled />
            }else{
                 <input name="group1" @onchange="Change" type="radio" checked />
            }
           
        }else{
            @if(Disabled){
                <input name="group1" @onchange="Change" type="radio" disabled />
            }else{
                <input name="group1" @onchange="Change" type="radio" />
            }
            
        }
        
        <span>@Text</span>
    </label>


@code{

    [Parameter]
    public string Text { get; set; } = "";
    [Parameter]
    public bool Checked { get; set; } = false;
    [Parameter]
    public bool Disabled { get; set; } = false;
    [Parameter]
    public EventCallback<bool> Onchange { get; set; }

    protected void Change (ChangeEventArgs e) {
        Onchange.InvokeAsync ((bool) e.Value);
    }

    
}