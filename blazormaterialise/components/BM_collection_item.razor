@namespace blazormaterialise
@inject IJSRuntime JSRuntime;
@inherits css_base


@switch (Type_item)
{
    case enum_collection.Basic:
    <li class="collection-item">@ChildContent</li>
    break;
    case enum_collection.Links:
    <a href="@Href" class="collection-item @valor">@ChildContent</a>
    break;
    default:
    break;
}

@code{
    [Parameter]
    public RenderFragment ChildContent{get;set;}

    [Parameter]
    public enum_collection Type_item {get;set;} = enum_collection.Links;
    [Parameter]
    public string Href {get;set;} = "";
    [Parameter]
    public bool Active{get;set;} = false;

    private string valor = "";

    private string show="";

    protected override void OnInitialized(){
      
        if(Active){
            valor += "active ";
        }
    }
}